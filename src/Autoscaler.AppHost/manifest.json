{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "AzureStorageQueue": {
      "type": "parameter.v0",
      "value": "{AzureStorageQueue.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "AzureStorage": {
      "type": "parameter.v0",
      "connectionString": "{AzureStorage.value}",
      "value": "{AzureStorage.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "DockerToken": {
      "type": "parameter.v0",
      "value": "{DockerToken.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "GithubToken": {
      "type": "parameter.v0",
      "value": "{GithubToken.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "autoscaler-api": {
      "type": "project.v0",
      "path": "../Autoscaler.Api/Autoscaler.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{autoscaler-api.bindings.http.targetPort}",
        "ConnectionStrings__AzureStorage": "{AzureStorage.connectionString}",
        "AzureStorageQueue": "{AzureStorageQueue.value}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "autoscaler-worker": {
      "type": "project.v0",
      "path": "../Autoscaler.Worker/Autoscaler.Worker.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__AzureStorage": "{AzureStorage.connectionString}",
        "AzureStorageQueue": "{AzureStorageQueue.value}",
        "DockerToken": "{DockerToken.value}",
        "GithubToken": "{GithubToken.value}"
      }
    }
  }
}